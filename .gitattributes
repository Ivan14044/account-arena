# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Windows scripts should always use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# PHP files
*.php text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.vue text eol=lf
*.json text eol=lf

# CSS files
*.css text eol=lf
*.scss text eol=lf

# Markdown files
*.md text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.pdf binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.mp4 binary
*.mp3 binary

