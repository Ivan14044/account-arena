{
  "name": "ai-bot-monorepo",
  "version": "1.0.0",
  "description": "AI Bot monorepo - Backend (Laravel) + Frontend (Vue.js)",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && composer install",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && composer install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && php artisan serve",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && php artisan serve --port=8000",
    "start:frontend": "cd frontend && npm run dev -- --port=3000",
    "setup": "npm run install:all && npm run setup:backend",
    "setup:backend": "cd backend && php artisan key:generate && php artisan migrate",
    "lint:frontend": "cd frontend && npm run lint",
    "format:frontend": "cd frontend && npm run format"
  },
  "keywords": ["laravel", "vue", "monorepo", "ai-bot"],
  "author": "",
  "license": "MIT"
}

